<tr class="text-center">
 <td><%= index_for lesson_counter, @lessons.current_page,
    Settings.admin_page %>
  </td>
  <td><%= lesson.id %></td>
  <td><%= lesson.category.name %></td>
  <% if current_user == @user %>
    <td>
    <% if lesson.is_finish? %>
      <%= link_to t(".complete"), lesson_path(id: lesson.id),
      class: "btn btn-success btn-sm" %></td>
    <% else %>
      <%= link_to t(".not_complete"), edit_lesson_path(id: lesson.id),
        class: "btn btn-info btn-sm" %></td>
    <% end %>
  <% end %>
  <td class="col-sm-2" style="color: red">
  <%= lesson.number_correct_answer.to_s + " / " +
    lesson.results.size.to_s %>
  </td>
</tr>
